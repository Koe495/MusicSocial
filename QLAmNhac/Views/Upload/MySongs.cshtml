@model IEnumerable<QLAmNhac.Models.BaiHat>
@{
    ViewBag.Title = "Nhạc của tôi";
    var q = ViewBag.Query as string ?? "";
}

<div class="container" style="margin-top:40px;">
    <div class="row" style="margin-bottom:15px;">
        <div class="col-md-6">
            <!-- Form tìm kiếm (đã bỏ action submit mặc định để dùng JS) -->
            <div class="form-inline">
                <div class="input-group">
                    <!-- Thêm ID txtSearch và sự kiện onsubmit="return false" để chặn reload -->
                    <input type="text"
                           id="txtSearch"
                           class="form-control"
                           placeholder="Tìm bài hát hoặc ca sĩ"
                           value="@ViewBag.Query"
                           autocomplete="off"
                           style="background:#111; border:1px solid #444; color:white;" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <h2 style="color: #fff; border-bottom: 1px solid #333; padding-bottom: 10px;">
        <i class="fa fa-music"></i> Nhạc đã đăng
        <a href="@Url.Action("Create")" class="btn btn-success pull-right"><i class="fa fa-plus"></i> Đăng mới</a>
    </h2>

    <div class="table-responsive" style="margin-top: 20px;">
        <table class="table table-hover" style="color: #ddd;">
            <thead>
                <tr style="background-color: #282828;">
                    <th>Thumbnail</th>
                    <th>Infomation</th>
                    <th>Status</th>
                    <th class="text-right">Action</th>
                </tr>
            </thead>
            <!-- Thêm ID cho tbody để AJAX biết chỗ chèn nội dung -->
            <tbody id="songsBody">
                @Html.Partial("_MySongsTableRows", Model)
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script>
    let searchTimeout = null;

    $("#txtSearch").on("keyup", function () {
        clearTimeout(searchTimeout);

        const keyword = $(this).val();

        searchTimeout = setTimeout(function () {
            $.ajax({
                url: '@Url.Action("MySongs_Search", "Upload")',
                type: 'GET',
                data: { q: keyword },
                success: function (html) {
                    $("#songsBody").html(html);
                },
                error: function () {
                    console.error("Search failed");
                }
            });
        }, 300);
    });

    function deleteSong(id) {
        if (!confirm("CẢNH BÁO: Bạn có chắc chắn muốn xóa bài hát này? Hành động này không thể hoàn tác!"))
            return;

        $.ajax({
            url: '@Url.Action("Delete", "Upload")',
            type: 'POST',
            data: { id: id },
            success: function (res) {
                if (res.success) {
                    $('#row-' + id).fadeOut();
                } else {
                    alert(res.msg);
                }
            },
            error: function () {
                alert("Lỗi kết nối server!");
            }
        });
    }
    </script>
}
