@model IEnumerable<QLAmNhac.Models.NguoiDung>

@{
    ViewBag.Title = "Quản lý Nghệ sĩ";
}

<div class="container" style="margin-top: 40px;">
    <h2 style="color: #1db954;"><i class="fa fa-users"></i> Danh sách Nghệ sĩ</h2>
    <hr style="border-color: #333;" />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="panel panel-default" style="background-color: #181818; border: 1px solid #333;">
                    <div class="panel-body text-center">
                        <img src="https://ui-avatars.com/api/?name=@item.HoTen&background=random&size=100" class="img-circle" style="border: 2px solid #1db954; margin-bottom: 10px;" />
                        <h4 style="color: #fff;">@item.HoTen</h4>
                        <p class="text-muted">@item.TenDangNhap</p>

                        <a href="@Url.Action("ArtistSongs", "Admin", new { id = item.MaNguoiDung })" class="btn btn-primary btn-sm btn-block">
                            <i class="fa fa-music"></i> Xem danh sách nhạc
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>