@model IEnumerable<QLAmNhac.Models.NguoiDung>

@{
    ViewBag.Title = "Quản lý người dùng";
    var currentQuery = ViewBag.Query as string ?? "";
    var currentRole = ViewBag.Role != null ? (int)ViewBag.Role : -1;
}

<div class="container" style="margin-top: 40px;">
    <h2 style="color: #1db954;"><i class="fa fa-user-cog"></i> Quản lý người dùng</h2>
    <hr style="border-color: #333;" />

    <div class="row" style="margin-bottom:15px;">
        <div class="col-md-8">
            @using (Html.BeginForm("UserManager", "Admin", FormMethod.Get))
            {
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Tìm theo tên hiển thị hoặc tên đăng nhập..." value="@currentQuery" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i> Tìm</button>
                    </span>
                </div>
            }
        </div>
        <div class="col-md-4">
            @using (Html.BeginForm("UserManager", "Admin", FormMethod.Get))
            {
                <!-- Preserve query when changing role -->
                <input type="hidden" name="q" value="@currentQuery" />
                <div class="form-group">
                    <select name="role" class="form-control" onchange="this.form.submit()">
                        <option value="">Tất cả loại tài khoản</option>
                        <option value="0" @(currentRole == 0 ? "selected" : "")>Người dùng</option>
                        <option value="1" @(currentRole == 1 ? "selected" : "")>Nghệ sĩ</option>
                    </select>
                </div>
            }
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-md-12">
                <div class="alert alert-info" style="background: #282828; border: 1px solid #444; color: #ddd;">
                    Không tìm thấy người dùng nào.
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-md-4" id="user-card-@item.MaNguoiDung">
                    <div class="panel panel-default" style="background-color: #181818; border: 1px solid #333; margin-bottom: 18px;">
                        <div class="panel-body text-center">
                            <img src="https://ui-avatars.com/api/?name=@item.HoTen&background=random&size=100" class="img-circle" style="border: 2px solid #1db954; margin-bottom: 10px;" />
                            <h4 style="color: #fff;">@item.HoTen</h4>
                            <p class="text-muted">@item.TenDangNhap</p>
                            <p class="text-muted">@item.Email</p>

                            <p>
                                @if (item.PhanQuyen == 1)
                                {
                                    <span class="label label-success" id="role-badge-@item.MaNguoiDung">Nghệ sĩ</span>
                                }
                                else
                                {
                                    <span class="label label-default" id="role-badge-@item.MaNguoiDung">Người dùng</span>
                                }
                            </p>

                            <button class="btn btn-warning btn-sm btn-block" onclick="toggleRole(@item.MaNguoiDung)">
                                <i class="fa fa-exchange-alt"></i> Thay đổi vai trò
                            </button>

                            <button class="btn btn-danger btn-sm btn-block" onclick="deleteUser(@item.MaNguoiDung)">
                                <i class="fa fa-trash"></i> Xóa tài khoản
                            </button>

                            <a href="@Url.Action("ArtistSongs", "Admin", new { id = item.MaNguoiDung })" class="btn btn-primary btn-sm btn-block" style="margin-top:8px;">
                                <i class="fa fa-music"></i> Xem nhạc
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section scripts {
    <script>
        function toggleRole(id) {
            if (!confirm("Bạn chắc chắn muốn thay đổi vai trò của người dùng này?")) return;

            $.ajax({
                url: '/Admin/ToggleRole',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        var badge = $('#role-badge-' + id);
                        if (res.newRole == 1) {
                            badge.removeClass('label-default').addClass('label-success').text('Nghệ sĩ');
                        } else {
                            badge.removeClass('label-success').addClass('label-default').text('Người dùng');
                        }
                    } else {
                        alert(res.msg || "Thao tác không thành công!");
                    }
                },
                error: function () { alert("Lỗi kết nối server!"); }
            });
        }

        function deleteUser(id) {
            if (!confirm("Xác nhận xóa tài khoản này? Hành động không thể hoàn tác.")) return;

            $.ajax({
                url: '/Admin/DeleteUser',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        $('#user-card-' + id).fadeOut();
                    } else {
                        alert(res.msg || "Xóa thất bại!");
                    }
                },
                error: function () { alert("Lỗi kết nối server!"); }
            });
        }
    </script>
}